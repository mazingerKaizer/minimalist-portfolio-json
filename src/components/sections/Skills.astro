---
import Section from "@/components/Section.astro";

import { skills } from "@cv";

---

<Section title="Habilidades">
    <ul>
    
    { 
        skills.map(({ name, level}) => (
         <li>
            <span>{name}</span>
        </li>   

        ))
    }
    </ul>
</Section>

<style>
    ul{
        display: inline-flex;
        gap: 8px;
        flex-wrap: wrap;
    }

    li {
        border-radius: 6px;
        background: #eee;
        color: black;
        font-size: .8rem;
        font-weight: 500;
        padding: 0.2rem 0.6rem;
        
    }

    li {
        transition: transform .5s;
    }

    li:hover {
        transform: scale(1.3);
        cursor: pointer;
        color: #fff;
        background: #333;
        /* background: blue; */
    }
</style>